<!DOCTYPE html>
<html>
  <head>
    <title><%= data.title %></title>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js", integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj", crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.min.js", integrity="sha384-+sLIOodYLS7CIrQpBjl+C7nPvqq+FbNUBDunl/OZv93DB7Ln/533i8e/mZXLi/P+", crossorigin="anonymous"></script>
    <link rel='stylesheet' href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css", integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N", crossorigin="anonymous" />
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2">
          <%- include('partials/sidebar-nav.ejs') %>
        </div>
        <div class="col-sm-10">
          <h1><%= data.title %></h1>
          <form action="" method="post">
            <div class="form-group">
              <label for="first_name">First Name:</label>
              <input type="text" name="first_name" id="first_name" class="form-control" required value=<%= `${ data.author === undefined ? '' : data.author.first_name }` %>>
            </div>
            <div class="form-group">
              <label for="family_name">Family Name:</label>
              <input type="text" name="family_name" id="family_name" class="form-control" required value=<%= `${ data.author === undefined ? '' : data.author.family_name }` %>>
            </div>
            <div class="form-group">
              <label for="date_of_birth">Date of birth:</label>
              <input type="date" id="date_of_birth" class="form-control" name="date_of_birth" value=<%= `${ data.author === undefined ? '' : data.author.date_of_birth_yyyy_mm_dd }` %>>
            </div>
            <div class="form-group">
              <label for="date_of_death">Date of death:</label>
              <input type="date" name="date_of_death" id="date_of_death" class="form-control" value=<%= `${ data.author === undefined ? '' : data.author.date_of_death_yyyy_mm_dd }` %>>
            </div>
            <button class="btn btn-primary" type="submit">Submit</button>
          </form>
          <% if (data.errors) { %>
            <ul>
              <% data.errors.forEach((error) => { %>
                <li><%= error.msg %></li>
              <% }) %>
            </ul>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
